                        url: base_url + '/update_cart',
                        type: 'POST',
                        data: {
                            '_token': csrf_token,
                            'update_field': 'domain_cycle',
                            'year': year,
                            'domain': domain
                        },
                    })
                    .done(function(response) {
                        console.log(response);
                        if (response.success == true) {
